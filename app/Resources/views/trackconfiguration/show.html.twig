{% extends 'base.html.twig' %}

{% block body %}
    <h1>TrackConfiguration</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trackConfiguration.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trackConfiguration.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trackConfiguration.description }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ trackConfiguration.length }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trackconfiguration_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trackconfiguration_edit', { 'id': trackConfiguration.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
